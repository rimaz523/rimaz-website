{
  "semi": false,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "^redux-persist",
    "^prop-types",
    "^@mui/material",
    "^@mui/icons-material",
    "^mui-image",
    "^@testing-library",
    "^@core/(.*)$",
    "^@server/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true
}
